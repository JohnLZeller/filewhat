{
    "name": "FileWhat",
    "version": "1.0.0",
    "description": "Describes common files placed in Github repos via tooltips",
    "permissions": [
        "https://www.github.com/*",
        "https://github.com/*"
    ],
    "content_scripts": [{
        "matches": ["https://www.github.com/*", "https://github.com/*"],
        "js": ["filewhat.js"],
        "css": ["css/styles.css"]
    }],
    "manifest_version": 2,
    "web_accessible_resources": [
        "descriptions/*"
    ]
}
